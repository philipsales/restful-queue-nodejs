{
  "swagger": "2.0",
  "info": {
    "title": "Notifications API",
    "version": "0.1"
  },
  "paths": {
    "/notifications/appointments": {
      "post": {
        "summary": "Create an appointment notification",
        "description": "Adds a new notification to the notification's list",
        "parameters": [
          {
            "name": "notification",
            "in": "body",
            "description": "The notification to create.",
            "schema": {
              "$ref": "#/definitions/notification"
            }
          }
        ],
        "responses": {
          "201": {
            "description": "notification successfully created.",
            "schema": {
              "$ref": "#/definitions/notification"
            }
          },
          "400": {
            "$ref": "#/responses/Standard400ErrorResponse"
          },
          "500": {
            "$ref": "#/responses/Standard500ErrorResponse"
          }
        }
      }
    },
    "/notifications/orders": {
      "post": {
        "summary": "Create an order notification",
        "description": "Adds a new notification to the notification's list",
        "parameters": [
          {
            "name": "notification",
            "in": "body",
            "description": "The notification to create.",
            "schema": {
              "$ref": "#/definitions/notification"
            }
          }
        ],
        "responses": {
          "201": {
            "description": "notification successfully created.",
            "schema": {
              "$ref": "#/definitions/notification"
            }
          },
          "400": {
            "$ref": "#/responses/Standard400ErrorResponse"
          },
          "500": {
            "$ref": "#/responses/Standard500ErrorResponse"
          }
        }
      }
    }
  },
  "parameters": {
    "jwtAuthorization": {
      "name": "Authorization",
      "description": "JWT token",
      "type": "string",
      "in": "header",
      "required": true
    }
  },
  "definitions": {
    "notification": {
      "required": [
        "notificationname"
      ],
      "properties": {
        "id": {
          "type": "integer",
          "readOnly": true
        },
        "notificationname": {
          "type": "string"
        },
        "permissions": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "isActive": {
          "type": "boolean"
        }
      }
    },
    "notifications": {
      "properties": {
        "data": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/notification"
          }
        }
      }
    },
    "Error": {
      "properties": {
        "code": {
          "type": "string"
        },
        "errors": {
          "type": "array",
          "items": {
            "properties": {
              "field": {
                "type": "string"
              },
              "error": {
                "type": "string"
              }
            }
          }
        },
        "userMessage": {
          "type": "string"
        },
        "internalMessage": {
          "type": "string"
        }
      }
    }
  },
  "responses": {
    "Standard500ErrorResponse": {
      "description": "An unexpected error occured."
    },
    "Standard400ErrorResponse": {
      "description": "Incorrect parameters submitted.",
      "schema": {
        "$ref": "#/definitions/Error"
      }
    },
    "Standard401ErrorResponse": {
      "description": "Unauthorized"
    },
    "Standard404ErrorResponse": {
      "description": "Resource does not exists."
    },
    "Standard409ErrorResponse": {
      "description": "Your app is making too many requests and is being rate limited. 429s can trigger on a per-app or per-user basis."
    }
  }
}